#include <stdio.h>
#include <stdbool.h>

// Структура, що представляє кімнату
typedef struct {
    int roomNumber;
    bool isReserved;
} Room;

// Функція для бронювання номера
void reserveRoom(Room* rooms, int roomCount, int roomNumber) {
    for (int i = 0; i < roomCount; i++) {
        if (rooms[i].roomNumber == roomNumber) {
            if (rooms[i].isReserved) {
                printf("Номер %d вже заброньований.\n", roomNumber);
            } else {
                rooms[i].isReserved = true;
                printf("Номер %d успішно заброньований.\n", roomNumber);
            }
            return;
        }
    }

    printf("Номер %d не знайдений.\n", roomNumber);
}

// Функція для виводу інформації про заброньовані номери
void printReservedRooms(const Room* rooms, int roomCount) {
    printf("Заброньовані номери:\n");
    for (int i = 0; i < roomCount; i++) {
        if (rooms[i].isReserved) {
            printf("Номер: %d\n", rooms[i].roomNumber);
        }
    }
}

int main() {
    const int roomCount = 10;
    Room rooms[roomCount];

    // Ініціалізація кімнат
    for (int i = 0; i < roomCount; i++) {
        rooms[i].roomNumber = i + 1;
        rooms[i].isReserved = false;
    }

    // Бронювання номерів
    reserveRoom(rooms, roomCount, 2);
    reserveRoom(rooms, roomCount, 5);
    reserveRoom(rooms, roomCount, 8);
    reserveRoom(rooms, roomCount, 2);  // повторне бронювання

    // Виведення заброньованих номерів
    printReservedRooms(rooms, roomCount);

    return 0;
}
