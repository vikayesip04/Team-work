#include <stdio.h>
#include <string.h>

#define MAX_PROPERTIES 100

// Структура, що представляє житловий об'єкт
typedef struct {
    char address[100];
    int rooms;
    double price;
} Property;

// Функція для додавання нового житлового об'єкту
void addProperty(Property properties[], int* count) {
    if (*count == MAX_PROPERTIES) {
        printf("Максимальна кількість властивостей досягнута.\n");
        return;
    }

    Property newProperty;
    printf("Введіть адресу: ");
    fgets(newProperty.address, sizeof(newProperty.address), stdin);
    newProperty.address[strcspn(newProperty.address, "\n")] = '\0';  // Видалення символу нового рядка
    printf("Введіть кількість кімнат: ");
    scanf("%d", &newProperty.rooms);
    printf("Введіть ціну: ");
    scanf("%lf", &newProperty.price);
    getchar();  // Очищення буфера введення

    properties[*count] = newProperty;
    (*count)++;
}

// Функція для пошуку житла за адресою та кількістю кімнат
void searchProperty(const Property properties[], int count, const char* address, int rooms) {
    int found = 0;

    printf("Результати пошуку:\n");
    for (int i = 0; i < count; i++) {
        if (strcmp(properties[i].address, address) == 0 && properties[i].rooms >= rooms) {
            printf("Адреса: %s, Кімнати: %d, Ціна: %.2f\n", properties[i].address, properties[i].rooms, properties[i].price);
            found = 1;
        }
    }

    if (!found) {
        printf("Немає результатів пошуку.\n");
    }
}

int main() {
    Property properties[MAX_PROPERTIES];
    int count = 0;

    char choice;
    do {
        printf("1. Додати житловий об'єкт\n");
        printf("2. Пошук житла за адресою та кількістю кімнат\n");
        printf("3. Вихід\n");
        printf("Ваш вибір: ");
        scanf(" %c", &choice);
        getchar();  // Очищення буфера введення

        switch (choice) {
            case '1':
                addProperty(properties, &count);
                break;
            case '2':
                {
                    char address[100];
                    int rooms;
                    printf("Введіть адресу для пошуку: ");
                    fgets(address, sizeof(address), stdin);
                    address[strcspn(address, "\n")] = '\0';  // Видалення символу нового рядка
                    printf("Введіть мінімальну кількість кімнат: ");
                    scanf("%d", &rooms);
                    getchar();  // Очищення буфера введення

                    searchProperty(properties, count, address, rooms);
                }
                break;
            case '3':
                printf("До побачення!\n");
                break;
            default:
                printf("Неправильний вибір. Спробуйте ще раз.\n");
        }

        printf("\n");
    } while (choice != '3');

    return 0;
}
